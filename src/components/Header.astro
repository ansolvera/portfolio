---
import Container from "../components/Container.astro";
import { Icon } from "astro-icon";

const githubLink = "https://github.com/";
const dribbbleLink = "https://github.com/";
const mediumLink = "https://github.com/";
---

<header id="header" class="header">
	<nav id="nav" class="nav" x-data="{ open: false }">
		<Container>
			<div class="nav--wrapper">
				<a href="/" class="nav--brand">
					<img src="/assets/img/logo.png" alt="Logo" class="nav--logo" />
				</a>
				<ul class="nav--menu">
					<li class="nav--menu--item">
						<a href="#about" class="nav--link">About</a>
					</li>
					<li class="nav--menu--item">
						<a href="/about" class="nav--link">Portfolio</a>
					</li>
					<li class="nav--menu--item">
						<a href="#blog" class="nav--link">Blog</a>
					</li>
					<li class="nav--menu--item">
						<a href="#testimonials" class="nav--link">Testimonials</a>
					</li>
					<li class="nav--menu--item">
						<a href="#contact" class="nav--link">Contact</a>
					</li>
				</ul>
				<div class="nav--right">
					<div class="nav--icons">
						<a href={githubLink} target="_blank" class="nav--icon">
							<Icon name="ri:github-fill" />
						</a>
						<a href={dribbbleLink} target="_blank" class="nav--icon">
							<Icon name="ri:dribbble-fill" />
						</a>
						<a href={mediumLink} target="_blank" class="nav--icon">
							<Icon name="ri:medium-fill" />
						</a>
					</div>
					<button class="nav--hamburger" x-on:click="open= !open">
						<Icon name="octicon:three-bars-16" />
					</button>
					<div class="nav--menu--mobile--wrapper" x-show="open">
						<ul class="nav--menu--mobile">
							<li class="nav--menu--item">
								<a href="/" class="nav--link">Home</a>
							</li>
							<li class="nav--menu--item">
								<a href="/about" class="nav--link">About</a>
							</li>
							<li class="nav--menu--item">
								<a href="/blog" class="nav--link">Blog</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</Container>
	</nav>
</header>

<style lang="scss" is:global>
	@import "../styles/variables.scss";
	@import "../styles/mixins.scss";

	header {
		position: fixed;
		z-index: 999;
		top: 0;
		right: 0;
		left: 0;
		width: 100vw;
		height: 4rem;
		background-color: rgba($white, 0.9);
		backdrop-filter: saturate(110%) blur(16px);
		border-bottom: 1px solid map-get($neutrals, "100");
	}

	header,
	nav {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	nav {
		width: 100%;
		height: 100%;
	}

	.nav--brand,
	.nav--right {
		width: auto;

		@media screen and (min-width: map-get($breakpoints, "lg")) {
			width: 20%;
		}
	}

	.nav--wrapper {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: center;
		width: 100%;
	}

	.nav--logo {
		width: 2.75rem;
		height: auto;
	}

	.nav--hamburger {
		width: 2.5rem;
		height: 2.5rem;
		display: inline-flex;
		justify-content: center;
		align-items: center;
		padding: 0;
		background-color: white;
		border: 1px solid map-get($neutrals, "100");
		border-radius: 0.25rem;
		cursor: pointer;

		@include hidden-for-desktop;
	}

	[astro-icon] {
		display: inline-block;
		width: 1.25rem;
		height: 1.25rem;
		object-fit: cover;
	}

	.nav--right {
		display: flex;
		gap: map-get($spacing, "600");
	}

	.nav--right,
	.nav--menu,
	.nav--icons {
		flex-direction: row;
		align-items: center;
	}

	.nav--right,
	.nav--icons {
		justify-content: flex-end;
	}

	.nav--menu {
		width: 60%;
		justify-content: center;
		gap: map-get($spacing, "800");
		list-style: none;

		@include hidden-for-mobile(inline-flex);
	}

	.nav--menu--item a {
		font-size: map-get($font-size, "300");
		line-height: 1;
		font-weight: 500;
		color: map-get($neutrals, "400");
		letter-spacing: 0.025em;
		text-transform: uppercase;
		text-decoration: none;
		transition: 0.3s color ease-in-out;

		&:hover {
			color: map-get($primary, "500");
		}
	}

	.nav--icons {
		display: inline-flex;
		gap: map-get($spacing, "400");
	}

	.nav--icons [astro-icon] {
		width: 1.75rem;
		height: 1.75rem;
		color: map-get($neutrals, "300");
		transition: 0.3s color ease-in-out;

		&:hover {
			color: map-get($primary, "500");
		}
	}

	.nav--menu--mobile--wrapper {
		position: absolute;
		top: 100%;
		right: 0;
		left: 0;
		display: flex;
		flex-direction: row;
		justify-content: flex-end;
		align-items: center;
		margin-right: map-get($spacing-pairs, "from-400-to-900");
	}

	.nav--menu--mobile {
		padding-block: map-get($spacing, "800");
		padding-inline: map-get($spacing, "600");
		background-color: $white;
		border: 1px solid map-get($neutrals, "100");
		border-radius: 0.5rem;
		box-shadow: 0 10px 15px -3px rgba($black, 0.1),
			0 4px 6px -4px rgba($black, 0.1);
		list-style: none;
	}
</style>
